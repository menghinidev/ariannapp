    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web (debug)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "deviceId": "chrome",
            "toolArgs": [
                "--dart-define-from-file",
                "${workspaceFolder}/.env",
            ],
            "args": [
                "--web-browser-flag",
                "--disable-web-security"
            ]
        },
        {
            "name": "Android (debug)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "toolArgs": [
                "--dart-define-from-file",
                "${workspaceFolder}/.env",
            ],
        },
        {
            "name": "iOS (debug)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "toolArgs": [
                "--dart-define-from-file",
                "${workspaceFolder}/.env",
            ],
        },
        {
            "name": "Android (release)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "toolArgs": [
                "--dart-define-from-file",
                "${workspaceFolder}/.env",
            ],
        },
    ]
}